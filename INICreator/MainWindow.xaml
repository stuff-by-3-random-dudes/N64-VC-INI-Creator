        <Label Content="MemPack:" HorizontalAlignment="Left" Margin="11,208,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="Enable MemPack" HorizontalAlignment="Left" Margin="155,214,0,0" VerticalAlignment="Top" GroupName="mp" Name="rbEnMemPack" Click="rbEnMemPack_Click"/>
        <RadioButton Content="Disable MemPack" HorizontalAlignment="Left" Margin="324,214,0,0" VerticalAlignment="Top" GroupName="mp" Name="rbDisMemPack" Click="rbDisMemPack_Click" IsChecked="True"/>
        <Button Content="Generate INI" HorizontalAlignment="Left" Margin="359,234,0,0" VerticalAlignment="Top" Width="103" Click="Button_Click"/>

